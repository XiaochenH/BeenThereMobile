/* pages/publish.wxss */
page{
    width: 100%;
    height: 100%;
}
.container{
    flex-flow:column nowrap;
    justify-content: flex-start;
    align-items: center;
    width: 100%;
    height: 100%;
}
.row{
    flex: 1;
    display: flex;
    width: 90%;
    height: 100%;
    margin: 0 5%;
    overflow: hidden;
}
.row .text{
    flex: 1;
    width: 100%;
    height: 100%;
    font-size: 22rpx;
    line-height: 40rpx;
    color: #aeaeae;
}
.row .placeholder{
  color: #aeaeae;
}
.date{
    padding: 5rpx 0;
}
.bottom{
    width: 100%;
    background: #fff;
    display: flex;
    flex-flow:row nowrap;
    justify-content: center;
    align-items: center;
}
.bottom .btn{
    flex: 1;
    line-height: 2;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    margin: 30rpx 30rpx;
}
.btn.success{
    background: #d8d8d8;
    color: #fff;
}
.btn.del{
    background: #f9c683;
    color: #fff;
}
