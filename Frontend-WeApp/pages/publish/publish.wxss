/* pages/publish.wxss */
page{
    width: 100%;
    height: 75%;
}
.container{
    padding-top: 30rpx;
    flex-flow:column nowrap;
    justify-content: center;
    align-items: left;
    width: 100%;
    height: 100%;
}
.title{
    margin: 15rpx 5%;
    width: 90%;
    text-align: left;
    height: 75rpx;
    font-size: 34rpx;
    border-bottom: 1px solid #e5e5e5;
}
.title .placeholder{
    color: #b2b2b2;
}
.row{
    flex: 1;
    display: flex;
    width: 90%;
    height: 100%;
    margin: 0 5%;
    overflow: hidden;
}
.row .text{
    padding-top: 20rpx;
    flex: 1;
    width: 100%;
    height: 100%;
    font-size: 28rpx;
    line-height: 40rpx;
    color: #black;
}
.row .placeholder{
    color: #b2b2b2;
}
.bottom{
    width: 100%;
    background: #fff;
    display: flex;
    flex-flow:row nowrap;
    justify-content: center;
    align-items: center;
}
.bottom .btn{
    flex: 1;
    line-height: 2;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    margin: 30rpx 30rpx;
}
.btn.success{
    background: #d8d8d8;
    color: #fff;
}
.btn.del{
    background: #f9c683;
    color: #fff;
}
