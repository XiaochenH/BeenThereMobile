/* pages/setting/setting.wxss */
page{
    padding-top: 30rpx;
    background-color: #white;
    font-size: 18px;
    font-family: -apple-system-font,PingFangSC,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #FF000000;
    text-align: left;
    font-size: 18px;
}

.phstyle{
    color: #B2B2B2;
}

.field__title--radius {
  padding-bottom: 10px;
}

.bottom{
    padding-top: 340rpx;
    width: 100%;
    background: #fff;
    opacity: 1;
    display: flex;
    flex-flow:row nowrap;
    justify-content: center;
    align-items: center;
}
.bottom .btn{
    flex: 1;
    line-height: 2;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    margin: 30rpx 30rpx;
    font-weight: 400;
}
.btn.success{
    background: #f9c683;
    color: #fff;
}
.btn.del{
    background: #f9c683;
    color: #fff;
}

.weui-footer{
    margin-bottom: 0px;
}
